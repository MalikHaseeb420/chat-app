<div class="row">
  <div class="col-8 mx-auto">
    <%= form_with(model: Message.new, remote: true) do |form| %>
      <div class="form-group mb-2">
        <%= form.label :message,class:'form-label' %>
        <%= form.text_field :message, class:'form-control' %>
      </div>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
